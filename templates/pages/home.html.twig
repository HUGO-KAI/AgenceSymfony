{% extends 'base.html.twig' %}

{%  block title 'Agence lorem ipsum' %}

{% block body %}

<div class="jumbotron text-center">
    <h1>Agence lorem ipsum</h1>
    <p>Quelque description pour votre agence</p>
</div>

<div class="container">
    <h2>Les derniers biens</h2>
    <div class="row flex">
        {% for property in properties %}
            <div class="col-3">
                <div class="card">
                    <div class="card-body">
                         <h5 class="card-title">
                            <a href="{{ path('property.show',{id:property.id, slug:property.title}) }}" class="d-inline-block text-truncate" style="max-width: 95%;">{{ property.title }}</a>
                         </h5>
                        <p class="card-text text-truncate" style="max-width: 95%;">{{ property.city }} ({{ property.postalCode }})</p>
                        <div class="text-primary font-weight-bold" style="font-size: 2rem">{{ property.formattedPrice()}} â‚¬</div>
                    </div>

                </div>
            </div>

        {% endfor %}
    </div>
</div>
{% endblock %}